<div class="wrapper_user_portal">
    <h3 class="current_user"><%=current_user.username%></h3>

    <br><br>

    <% if @customers.empty? %>
        <p>No Customers to Display<p>
    <% else %>
        <% @customers.each do |customer| %>
            <h4><a href="customers/<%=customer.id%>"><%=customer.name%></h4>
        <% end %>
    <% end %>

    <br><br>

    <form action="/customers/new">
        <button type="submit">Create Customer</button>
    </form>

    <br><br>

    <a href="/logout"><button>Log Out</button></a>

</div>